# CLAW.AI 后端配置
APP_NAME=CLAW.AI
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置 (使用现有的 PostgreSQL)
DATABASE_URL=postgresql://postgres:password@localhost:5432/claw_ai
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/claw_ai_test

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# JWT 认证配置
SECRET_KEY=claw-ai-dev-secret-key-2026-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Zhipu AI 配置
ZHIPUAI_API_KEY=
ZHIPUAI_MODEL=glm-4

# CORS 配置
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://openspark.online"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# 安全配置
ALLOWED_HOSTS=["localhost","openspark.online"]

# 限流配置
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REDIS_URL=redis://localhost:6379/0
