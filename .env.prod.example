# CLAW.AI - 生产环境配置
# OpenSpark 智能科技

# ====================
# 应用配置
# ====================
APP_NAME=CLAW.AI
APP_VERSION=1.0.0
DEBUG=False

# ====================
# 数据库配置
# ====================
POSTGRES_USER=claw_ai
POSTGRES_PASSWORD=your_secure_password_here_change_this
POSTGRES_DB=claw_ai

# ====================
# Redis 配置
# ====================
REDIS_PASSWORD=your_secure_redis_password_here_change_this

# ====================
# JWT 认证配置
# ====================
SECRET_KEY=your-secret-key-here-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ====================
# Zhipu AI 配置
# ====================
# ⚠️ 必须：到 https://open.bigmodel.cn/ 购买 API Key
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
ZHIPUAI_MODEL=glm-4

# ====================
# Pinecone 向量数据库配置
# ====================
# ⚠️ 必须：到 https://www.pinecone.io/ 注册并获取 API Key
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=claw-ai

# ====================
# CORS 配置
# ====================
CORS_ORIGINS=http://openspark.online,https://openspark.online,http://111.229.40.25

# ====================
# 日志配置
# ====================
LOG_LEVEL=INFO

# ====================
# 安全配置
# ====================
ALLOWED_HOSTS=openspark.online,www.openspark.online,111.229.40.25

# ====================
# 文件上传配置
# ====================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# ====================
# 监控和告警
# ====================
# Sentry（错误追踪，可选）
# SENTRY_DSN=

# Prometheus（指标监控，可选）
# ENABLE_PROMETHEUS=True

# ====================
# Grafana 监控配置
# ====================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_ROOT_URL=https://openspark.online/grafana

# ====================
# 邮件通知（可选）
# ====================
# SMTP_HOST=smtp.exmail.qq.com
# SMTP_PORT=465
# SMTP_USER=noreply@openspark.online
# SMTP_PASSWORD=your_smtp_password
# EMAIL_FROM=noreply@openspark.online
# EMAIL_TO=admin@openspark.online
