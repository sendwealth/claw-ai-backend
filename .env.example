# 应用配置
APP_NAME=CLAW.AI
APP_VERSION=1.0.0
DEBUG=True

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/claw_ai
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/claw_ai_test

# Redis 配置
REDIS_URL=redis://localhost:6379/0

# JWT 认证配置
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Zhipu AI 配置
ZHIPUAI_API_KEY=your-zhipu-ai-api-key-here
ZHIPUAI_MODEL=glm-4

# Pinecone 向量数据库配置
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=claw-ai

# CORS 配置
CORS_ORIGINS=["http://localhost:3000","http://openspark.online"]

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 文件上传配置
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# 安全配置
ALLOWED_HOSTS=["openspark.online","www.openspark.online"]
